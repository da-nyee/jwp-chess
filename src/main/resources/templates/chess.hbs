        <button id="home-btn" type="button" class="btn btn-outline-primary">홈 화면</button>
    </div>
    {{#roomId}}
        <div id="roomId" style="display: none">{{roomId}}</div>
    {{/roomId}}
    {{#score}}
        <div id="whiteScore" style="display: none">{{score.whiteScore}}</div>
        <div id="blackScore" style="display: none">{{score.blackScore}}</div>
    {{/score}}
